{
  "name": "@leizm/mysql",
  "version": "1.0.0",
  "description": "基于 Node.js/TypeScript 的 MySQL 连接管理器",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "files": [
    "dist/lib"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:leizongmin/leizm-mysql.git"
  },
  "keywords": [
    "ORM",
    "MySQL"
  ],
  "author": "Zongmin Lei <leizongmin@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/leizongmin/leizm-mysql",
  "dependencies": {
    "@types/debug": "0.0.30",
    "@types/ioredis": "^3.2.1",
    "@types/mysql": "^2.15.2",
    "emoji-regex": "^6.5.1",
    "ioredis": "^3.2.2",
    "lei-utils": "^3.1.1",
    "mysql": "^2.15.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.8",
    "@types/jest": "^22.2.0",
    "@types/node": "^8.0.54",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "debug": "^3.1.0",
    "jest": "^23.0.0-alpha.0",
    "prettier": "^1.8.2",
    "ts-jest": "^22.4.1",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.2"
  },
  "scripts": {
    "compile": "rm -rf dist && tsc",
    "test": "jest",
    "test-debug": "export DEBUG='@leizm/mysql:*' && jest",
    "coverage": "nyc --reporter=lcov mocha && nyc report",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "prettier --write 'src/**/*.ts'",
    "docs": "typedoc --mode modules --out ./docs --theme minimal --readme none src/lib",
    "prepublish": "npm run test"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
