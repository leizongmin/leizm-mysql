{
  "name": "@leizm/mysql",
  "version": "1.5.1",
  "description": "基于 Node.js/TypeScript 的 MySQL 连接管理器",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "files": [
    "dist/lib"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:leizongmin/leizm-mysql.git"
  },
  "keywords": [
    "ORM",
    "MySQL"
  ],
  "author": "Zongmin Lei <leizongmin@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/leizongmin/leizm-mysql",
  "dependencies": {
    "@types/debug": "0.0.30",
    "@types/ioredis": "^4.0.1",
    "@types/mysql": "^2.15.5",
    "@types/node": "^10.10.1",
    "emoji-regex": "^7.0.1",
    "ioredis": "^4.0.0",
    "lei-utils": "^3.1.1",
    "mysql": "^2.16.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.5",
    "@types/jest": "^23.3.2",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "debug": "^3.2.5",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.1",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.3"
  },
  "scripts": {
    "clean": "rm -rf coverage dist docs",
    "compile": "rm -rf dist && tsc",
    "test": "jest && export TEST_DISABLE_CACHE=1 && jest",
    "test-cov": "jest --coverage",
    "test-debug": "export DEBUG='@leizm/mysql:*,t' && jest",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "prettier --write 'src/**/*.ts'",
    "docs": "typedoc --mode modules --out ./docs --theme minimal --readme none src/lib",
    "prepublish": "npm run test && npm run compile"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
